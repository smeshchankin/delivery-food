{
    "views": [
        {
            "name": "search",
            "path": "/search/{search}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["menu", "products", "productsHeader"],
            "data": ["data.menu", "data.searchList", "data.searchHeader"]
        },
        {
            "name": "provider",
            "path": "/provider/{id}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["menu", "products", "productsHeader"],
            "data": ["data.menu", "data.productsList", "data.productsHeader"]
        },
        {
            "name": "404",
            "path": "/{path}",
            "components": ["page404"]
        },
        {
            "name": "index",
            "path": "/",
            "components": ["menu", "providers", "providersHeader"],
            "data": ["data.menu", "data.providers"]
        }
    ],
    "default": {
        "view": "index"
    },
    "components": [
        {
            "name": "providersHeader",
            "template": ".restaurants-header"
        },
        {
            "name": "providers",
            "template": "#providers > .card"
        },
        {
            "name": "productsHeader",
            "template": "#restaurant-info"
        },
        {
            "name": "products",
            "template": "#products > .card"
        },
        {
            "name": "page404",
            "template": "#page404"
        },
        {
            "name": "menu",
            "template": ".footer-link"
        }
    ]
}
