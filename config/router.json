{
    "views": [
        {
            "name": "search",
            "path": "/search/{search}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["products", "productsHeader"],
            "data": "data.search"
        },
        {
            "name": "provider",
            "path": "/provider/{id}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["products", "productsHeader"],
            "data": "data.products"
        },
        {
            "name": "index",
            "path": "/",
            "components": ["providers", "providersHeader"],
            "data": "data.providers"
        }
    ],
    "default": "index"
}
