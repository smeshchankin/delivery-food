{
    "views": [
        {
            "name": "search",
            "path": "/search/{search}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["products", "productsHeader"],
            "data": ["data.searchList", "data.searchHeader"]
        },
        {
            "name": "provider",
            "path": "/provider/{id}",
            "condition": {
                "check": "methods.isAuthorized",
                "failed": "methods.unauthorizedHandler"
            },
            "components": ["products", "productsHeader"],
            "data": ["data.productsList", "data.productsHeader"]
        },
        {
            "name": "404",
            "path": "/{path}",
            "components": ["page404"]
        },
        {
            "name": "index",
            "path": "/",
            "components": ["providers", "providersHeader"],
            "data": ["data.providers"]
        }
    ],
    "default": {
        "view": "index"
    },
    "components": [
        {
            "name": "providersHeader",
            "template": ".restaurants-header"
        },
        {
            "name": "page404",
            "template": "#page404"
        }
    ]
}
